<div class="user-index-wrap">
  <div class="user-index-container">

    <h1>user一覧</h1>
    <p><%= notice %></p>

    <% @users.each do |user| %>
    <div class="user-container">
      <div class="user-index-name"><%= user.name %></div>
      <div class="user-index-email"><%= user.email %></div>
      <%= image_tag user.image_user.to_s , class: "user-index-img" %>
        <div class="user-index-stauts">
          <%= link_to '詳細を見る', user_path(user.id) %>
          <%= link_to "編集する", edit_user_path(user.id) %>
          <%= link_to 'ブログを削除する', user_path(user.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
        </div>
    </div><div class="clear"></div>
    <% end %>

  </div>
</div>
